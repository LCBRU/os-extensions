<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class name="com.krishagni.openspecimen.redcap.Project" table="OS_REDCAP_PROJECTS">
    <id name="id" column="IDENTIFIER">
      <generator class="native">
        <param name="sequence">OS_REDCAP_PROJECTS_SEQ</param>
      </generator>
    </id>

    <property name="name" column="NAME"/>

    <property name="hostUrl" column="HOST_URL"/>

    <property name="projectId" column="PROJECT_ID"/>

    <property name="apiToken" column="API_TOKEN"/>

    <property name="transformersJson" column="FIELD_TRANSFORMERS"/>

    <property name="subjectFieldsJson" column="SUBJECT_FIELDS"/>

    <property name="visitFieldsJson" column="VISIT_FIELDS"/>

    <many-to-one 
      name="collectionProtocol" 
      class="com.krishagni.catissueplus.core.biospecimen.domain.CollectionProtocol" 
      column="COLLECTION_PROTOCOL_ID"/>

    <many-to-one 
      name="updatedBy" 
      class="com.krishagni.catissueplus.core.administrative.domain.User" 
      column="USER_ID"/>

    <property name="updateTime" column="UPDATE_TIME"/>

    <property name="activityStatus" column="ACTIVITY_STATUS"/>

    <filter name="activeEntity"/>

    <query name="getProjects">
      select
        p
      from
        com.krishagni.openspecimen.redcap.Project p
        join p.collectionProtocol cp
      order by
        cp.id, p.id
    </query>

    <query name="getProjectsByCp">
      select
        p
      from
        com.krishagni.openspecimen.redcap.Project p
        join p.collectionProtocol cp
      where 
        cp.id = :cpId
    </query>

    <query name="getProjectByHost">
      select
        p
      from
        com.krishagni.openspecimen.redcap.Project p
      where
        p.projectId = :projectId and
        p.hostUrl = :hostUrl
    </query>

    <query name="getProjectByCpAndName">
      select
        p
      from
        com.krishagni.openspecimen.redcap.Project p
        join p.collectionProtocol cp
      where
        p.name = :projectName and
        cp.id = :cpId
    </query>
  </class>
</hibernate-mapping>
