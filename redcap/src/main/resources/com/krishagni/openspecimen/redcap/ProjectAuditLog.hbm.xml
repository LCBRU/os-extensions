<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class name="com.krishagni.openspecimen.redcap.ProjectAuditLog" table="OS_REDCAP_PROJECT_AUDIT_LOGS">
    <id name="id" column="IDENTIFIER">
      <generator class="native">
        <param name="sequence">OS_REDCAP_PROJ_AUDIT_LOGS_SEQ</param>
      </generator>
    </id>

    <many-to-one name="project" class="com.krishagni.openspecimen.redcap.Project" column="PROJECT_ID"/>

    <property name="operation" column="OPERATION" not-null="true">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">com.krishagni.openspecimen.redcap.ProjectAuditLog$Operation</param>
        <param name="type">12</param>
      </type>
    </property> 

    <property name="startTime" column="START_TIME"/>

    <property name="endTime" column="END_TIME"/>

    <property name="intervalStartTime" column="INTERVAL_START_TIME"/>

    <property name="intervalEndTime" column="INTERVAL_END_TIME"/>

    <many-to-one name="user" class="com.krishagni.catissueplus.core.administrative.domain.User" column="USER_ID"/>

    <property name="noOfRecords" column="RECS_COUNT"/>

    <property name="failedEventsLog" column="FAILED_EVENTS_LOG"/>

    <property name="status" column="STATUS" not-null="true">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">com.krishagni.openspecimen.redcap.ProjectAuditLog$Status</param>
        <param name="type">12</param>
      </type>
    </property> 

    <query name="getProjectLatestDataSyncTime">
      select
        max(pa.intervalEndTime)
      from
        com.krishagni.openspecimen.redcap.ProjectAuditLog pa
        join pa.project p
      where 
        pa.status = 'SUCCESS' and
        pa.operation = 'DATA_SYNC' and
        p.id = :projectId
    </query>

    <query name="getProjectLogs">
      select
        pa
      from
        com.krishagni.openspecimen.redcap.ProjectAuditLog pa
        join pa.project p
      where
        p.id = :projectId
      order by
        pa.id desc
    </query>

    <query name="getProjectLogsByCp">
      select
        pa
      from
        com.krishagni.openspecimen.redcap.ProjectAuditLog pa
        join pa.project p
        join p.collectionProtocol cp
      where
        cp.id = :cpId
      order by
        pa.id desc
    </query>
  </class>
</hibernate-mapping>
